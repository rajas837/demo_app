<br />
<% if @user.errors.full_messages.any? %>
    <% @user.errors.full_messages.each do | error_messagge | %>
        <%= error_messagge %> <br />
    <% end %>
<% end %>
<%= form_for @user do | f| %>
<div class="col-md-3"></div>
<div class="col-md-6">
<table class="table table-striped">
<tr>
    <td><%= f.label :name%></td>
    <td><%= f.text_field :name %></td>
</tr>
<tr>
    <td><%= f.label :email%></td>
    <td><%= f.email_field :email %></td>
</tr>
<tr>
    <td><%= f.label :address%></td>
    <td><%= f.text_field :address %></td>
</tr>
<tr>
    <td><%= f.label :mobile_no%></td>
    <td><%= f.text_field :mobile_no%></td>
</tr>
<tr>
    <td><%= f.label :password%></td>
    <td><%= f.password_field :password %></td>
</tr>
</tr>
<tr>
    <td><%= f.label :confirm_password%></td>
    <td><%= f.password_field :confirm_password %></td>
</tr>
<tr>
    <%= f.fields_for :image do | im | %>
    <td><%= im.label :photo %></td>
    <td><%= im.file_field :photo %></td>
    <% end %>
</tr>
<tr>
    <td><%= link_to "Sign In", sign_in_users_path%></td>
    <td><%= f.submit "Sign Up"%></td>
</tr>
</table>
<% end %>
</div>
<div class="col-md-3"></div>
<div class="col-md-12"><%= link_to "Go to Users",users_path%></div>